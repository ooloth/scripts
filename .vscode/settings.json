{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "deno.enable": true,
  "editor.formatOnSave": true,
  "files.associations": {
    "**/bin/*": "shellscript",
  },
  "files.exclude": {
    ".mypy_cache": true,
    ".venv": true,
    "**/__pycache__": true
  },
  "print-it.python.template": "log.debug(f\"ğŸ” {{escaped}}: {{{raw}}}\")",
  "print-it.rust.template": "eprintln!(\"ğŸ” {{escaped}}: {:?}\", {{raw}});",
  "print-it.typescript.template": "console.warn('ğŸ” {{escaped}}:', {{raw}})",
}
